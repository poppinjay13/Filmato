<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TicketActivity"
    android:orientation="vertical">
    <include layout="@layout/toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/rect">
        <TextView
            android:id="@+id/ticket_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TICKET_NO"
            android:padding="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MOVIE:"
            android:padding="10dp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CINEMA:"
            android:padding="10dp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TIME:"
            android:padding="10dp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATE:"
            android:padding="10dp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEATS:"
            android:padding="10dp"
            android:layout_margin="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/ticket_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MOVIE_NAME"
            android:padding="10dp"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/ticket_cinema"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CINEMA_NAME"
            android:padding="10dp"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/ticket_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TIMESTAMP"
            android:padding="10dp"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/ticket_ticket_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATESTAMP"
            android:padding="10dp"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/ticket_seats_booked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEATS BOOKED"
            android:padding="10dp"
            android:layout_margin="10dp"/>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>